{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>TitreE</th>
                <td>{{ event.TitreE }}</td>
            </tr>
            <tr>
                <th>AdresseE</th>
                <td>{{ event.AdresseE }}</td>
            </tr>
            <tr>
                <th>DateE</th>
                <td>{{ event.DateE ? event.DateE|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>HeureE</th>
                <td>{{ event.HeureE ? event.HeureE|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DescrE</th>
                <td>{{ event.DescrE }}</td>
            </tr>

     <tr>
                <th>Category</th>
                <td>{{  event.category.titre }} </td>
            </tr>
            <tr>
                <th>Image event</th>
                <td>

                    {{ event.eventfilename }}

                    </td>
            </tr>
                             
        </tbody>
    </table>


    <table class="borderless  mt-5" >
        <tr>
            <td  >  <button style="margin:6px;"  class="btn btn-primary"><a class="text-light btn "   href="{{ path('event_index') }}">Back to list</a></button>
            </td>
            <td > <button style="margin:6px;"  class="btn btn-warning"><a class="text-light btn"   href="{{ path('event_edit', {'id': event.id}) }}">Edit</a></button></td>
            <td  >           {{ include('event/_delete_form.html.twig') }}



            </td>
        </tr>
    </table>



{% endblock %}
