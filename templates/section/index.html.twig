{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
<div class="jumbotron text-center">
    <h1>Section</h1>
    <p>
        Ex consectetur aute aliqua Lorem magna sint aute reprehenderit exercitation exercitation. Ipsum eu do et officia
        enim non occaecat adipisicing nisi ea ullamco. Anim ullamco magna est eu cupidatat commodo proident mollit eu
        ea.
    </p>

</div>

{% for message in app.flashes('success') %}

    <div class="alert alert-success">

        {{ message }}

    </div>

{% endfor %}

<div class="container">

    <div class="row flex">

        {% for section in sections %}


        <div class="col-3" style="max-width: 33%;">
            <div class="card" style="margin-top:15px;">
                <div class="card-body">



                    {% if section.sectionfilename %}
     <div class="embed-responsive embed-responsive-16by9" style=" width: 280px; height: 200px;">
                        <video class="embed-responsive-item" poster="
  {% if section.sectionfilename3 %}
                        {{ vich_uploader_asset( section, 'imagevSection')  }}
         {% endif %}" controls  autobuffer="true"  >
                         <source src="/videos/sections/{{ section.sectionfilename }} " type="video/mp4"></video>
                         </div>
                           


                   




                    {% endif %}


                    <p class="card title">


                    <h5>{{ section.titre }} </h5>

                    <h6 class="card-subtitle mb-2 text-muted">{{ section.chapitre.titre }}</h6>


                    </p>


                    <div class="row">
                        <div class="col-sm">
                            <b>Fichier: </b>
                        </div>
                        <div class="col-sm">
                            {% if section.sectionfilename2 %}

                                <p>
                                    <svg class="bi bi-file-earmark" width="1em" height="1em" viewBox="0 0 16 16"
                                         fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M4 1h5v1H4a1 1 0 00-1 1v10a1 1 0 001 1h8a1 1 0 001-1V6h1v7a2 2 0 01-2 2H4a2 2 0 01-2-2V3a2 2 0 012-2z"/>
                                        <path d="M9 4.5V1l5 5h-3.5A1.5 1.5 0 019 4.5z"/>
                                    </svg>
                                    <a href="/fichiers/sections/{{ section.sectionfilename2 }}"
                                       alt="{{ section.sectionfilename2 }}"
                                       type="application/pdf"> {{ section.sectionfilename2 }}</a></p>
                            {% endif %}                                </div>

                    </div>


                    <div class="row">
                        <div class="col-sm">
                            <b>Description: </b>
                        </div>
                        <div class="col-sm">
                            <i>{{ section.descr }} </i>
                        </div>
                    </div>
                

                <button class="btn btn-primary" style="margin:6px;"><a class="text-light" style="text-decoration:none;"
                                                                       href="{{ path('section_show', {'id': section.id}) }}">Show</a>
                <button class="btn btn-warning"><a class="text-light" style="text-decoration:none;"
                                                   href="{{ path('section_edit', {'id': section.id}) }}">Edit</a>
                </button>
      </div>
                    </div>


                </div>

                {% endfor %}
                <div class="card" style="margin:15px;">
                    <div class="card-body">
                        <h5 class="card title">
                            <a href="#">Une autre section ici </a>
                        </h5>
                        <div class="text-primary">
                            <button class="btn btn-success"><a class="text-light" style="text-decoration:none;"
                                                               href="{{ path('section_new') }}">Create new</a>
                
                           </div>

                </div>
            </div>
        </div>


    </div>
                      


                {% endblock %}
